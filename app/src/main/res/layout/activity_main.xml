<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.user.calculatorapp.MainActivity">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:name="com.example.user.calculatorapp.ShowResultFragment"
        android:id="@+id/resultFragment"
        android:layout_weight="1.2" />

    <fragment
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:name="com.example.user.calculatorapp.NumberPadFragment"
        android:id="@+id/numberPadFragment"
        android:layout_weight="3" />
</LinearLayout>
