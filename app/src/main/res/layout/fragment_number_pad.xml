<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_number_pad"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:paddingTop="8dp"
    tools:context="com.example.user.calculatorapp.NumberPadFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:text="C"
            android:textSize="@dimen/botton_size"
           android:textColor="@color/colorAccent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/cacncel"
            android:layout_weight="1" />
        <Button
            android:text="/"
            android:textSize="@dimen/botton_size"
            android:textColor="@color/colorAccent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:onClick="onClick"
            android:id="@+id/division"
            android:layout_weight="1" />
        <Button
            android:text="x"
            android:textSize="@dimen/botton_size"
            android:textColor="@color/colorAccent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/muliplication"
            android:layout_weight="1" />

        <Button
            android:text="D"
            android:textSize="@dimen/botton_size"
            android:textColor="@color/colorAccent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/delete"
            android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:text="7"
            android:textSize="@dimen/botton_size"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/seven"
            android:layout_weight="1" />
        <Button
            android:text="8"
            android:textSize="@dimen/botton_size"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/eight"
            android:layout_weight="1" />
        <Button
            android:text="9"
            android:textSize="@dimen/botton_size"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/nine"
            android:layout_weight="1" />
        <Button
            android:text="-"
            android:textSize="@dimen/botton_size"
            android:textColor="@color/colorAccent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/subtract"
            android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:text="4"
            android:textSize="@dimen/botton_size"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/four"
            android:layout_weight="1" />
        <Button
            android:text="5"
            android:textSize="@dimen/botton_size"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/five"
            android:layout_weight="1" />
        <Button
            android:text="6"
            android:textSize="@dimen/botton_size"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/six"
            android:layout_weight="1" />
        <Button
            android:text="+"
            android:textSize="@dimen/botton_size"
            android:textColor="@color/colorAccent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/addition"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:text="1"
            android:textSize="@dimen/botton_size"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/one"
            android:layout_weight="1" />
        <Button
            android:text="2"
            android:textSize="@dimen/botton_size"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/two"
            android:layout_weight="1" />
        <Button
            android:text="3"
            android:textSize="@dimen/botton_size"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/three"
            android:layout_weight="1" />
        <Button
            android:text="( )"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/botton_size"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/bracket"
            android:layout_weight="1" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:text="0"
            android:textSize="@dimen/botton_size"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/zero"
            android:layout_weight="1" />
        <Button
            android:text="."
            android:textSize="@dimen/botton_size"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/dot"
            android:layout_weight="1" />
        <Button
            android:text="+/-"
            android:textSize="@dimen/botton_size"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/sign"
            android:layout_weight="1" />
        <Button
            android:text="="
            android:textSize="@dimen/botton_size"
            android:textColor="@color/colorAccent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/sum"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>
